<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg1"
    android:weightSum="10"
    tools:context=".MainTask">

    <RelativeLayout
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="170dp">


        <EditText
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:id="@+id/caregiverName"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Caregiver's Name"

            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <EditText
            android:background="@android:color/transparent"
            android:padding="14dp"
            android:id="@+id/patientName"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Patient's Name"

            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <EditText
            android:id="@+id/inputTaskEditText"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_below="@+id/caregiverName"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="58dp"
            android:layout_marginTop="87dp"
            android:layout_marginEnd="59dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Enter task" />


    </RelativeLayout>

    <!--This is for the task list-->


    <!--for the buttons at bottom-->
    <androidx.cardview.widget.CardView

        android:layout_width="fill_parent"
        android:layout_height="362dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"

        >

        <ListView
            android:id="@+id/taskView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </androidx.cardview.widget.CardView>

    <GridLayout



        android:columnCount="4"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:columnOrderPreserved="false"
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="14dp">

        <Button
            android:id="@+id/addButton"
            android:layout_width="wrap_content"
            android:layout_height="119dp"
            android:text="Add" />

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="125dp"
            android:text="Delete" />

        <Button
            android:id="@+id/editButton"
            android:layout_width="wrap_content"
            android:layout_height="123dp"
            android:text="Edit" />

        <Button
            android:id="@+id/archiveButton"
            android:layout_width="wrap_content"
            android:layout_height="122dp"
            android:text="Archive" />
    </GridLayout>



</LinearLayout>